<summary class="none extra primary-text" @onclick="SwitchArrow">
    <div class="row">
        <i class="extra">@Icon</i>
        <div class="max">
            <h4>@Title</h4>
        </div>
        <i class="right">@DropArrowIcon</i>
    </div>
</summary>

@code {
    
    public string DropArrowIcon { get; set; } = "arrow_drop_down";
    
    [Parameter]
    public string? Icon { get; set; }
    
    [Parameter]
    public string? Title { get; set; }
    
    public void SwitchArrow()
    {
        DropArrowIcon = DropArrowIcon == "arrow_drop_down" ? "arrow_drop_up" : "arrow_drop_down";
    }
}
